{
    "name": "arxiver",
    "version": "2.0",
    "description": "Easy access on ArXiv! Rename the title to the paper's title. Add a button to navigate easily. Download PDF with meaningful filename. And add toggle",
    "background": {
        "scripts": ["background.js"]
    },
    "content_scripts": [{
        "matches": ["*://arxiv.org/*pdf*", "*://arxiv.org/abs/*",
            "*://export.arxiv.org/*pdf*", "*://export.arxiv.org/abs/*"],
        "js": ["content.js"],
        "run_at": "document_end"
    }],
    "browser_action": {
        "default_icon": {
            "19": "icon19.png",
            "38": "icon38.png"
        },
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "*://export.arxiv.org/*",
        "*://arxiv.org/*",
        "downloads",
        "storage"
    ],
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "manifest_version": 2
}